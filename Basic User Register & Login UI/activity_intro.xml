<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kerem.loginscreen.IntroActivity"
    android:background="@drawable/background2">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Welcome"
        android:textColor="#F5F5F5"
        android:textSize="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_subHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_welcome"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:text="Almost there! Register, if you don't have an account"
        android:textColor="#F5F5F5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView_register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_background_intro"
        android:text="LOGIN"
        android:textAppearance="@style/button_text_style"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/editText_login_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/oval"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_below="@+id/textView_subHeader"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText_login_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/oval"
        android:ems="10"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:layout_below="@+id/editText_login_username"
        android:layout_alignLeft="@+id/editText_login_username"
        android:layout_alignStart="@+id/editText_login_username" />

    <TextView
        android:id="@+id/textView_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#BDBDBD"
        android:textSize="16dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
